[
    {
        "dest": "data_directory",
        "attributes" : {
            "type": "str",
            "help": "Relative path to the image files"
        }
    },
    {
        "dest": "--save_dir",
        "attributes": {
            "type": "str",
            "help": "Relative path in which to save checkpointed model",
            "default": "../models"
        }
    },
    {
        "dest": "--arch",
        "attributes": {
            "type": "str",
            "help": "Name of the Torchvision model to train",
            "default": "vgg13"
        }
    },
    {
        "dest": "--learning_rate",
        "attributes" : {
            "type": "float",
            "help": "Learning rate",
            "default": 0.01
        }
    },
    {
        "dest": "--hidden_units",
        "attributes" : {
            "type": "list",
            "help": "Number of inits in each hidden layer, in an array [value, value, ...]",
            "default": [512]
        }
    },
    {
        "dest": "--gpu",
        "attributes": {
            "help": "Specify to request GPU",
            "action": "store_true"
        }
    }
]